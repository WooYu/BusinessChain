<resources>
    <!-- Base application theme. -->
    <style name="AppMainTheme" parent="@style/QMUI.Compat.NoActionBar">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色。-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appbg_color</item>

        <!-- 配置qmui提供的theme -->
        <item name="QMUITopBarStyle">@style/QDTopBar</item>
    </style>

    <!--标题-->
    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@color/colorPrimary</item>
        <item name="qmui_topbar_title_color">@color/tx_colorb</item>
        <item name="qmui_topbar_subtitle_color">@color/tx_colorb</item>
        <item name="qmui_topbar_height">@dimen/title_height</item>
        <item name="qmui_topbar_image_btn_height">@dimen/title_height</item>
        <item name="qmui_topbar_left_back_drawable_id">@mipmap/arrow_left1</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/tx_colorb</item>
        <item name="qmui_topbar_text_btn_text_size">@dimen/tx_size13</item>
    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_colora</item>
    </style>

    <style name="ViewVerticalLineStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_colora</item>
    </style>
</resources>
