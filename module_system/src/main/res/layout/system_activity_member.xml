<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>
        <variable
                name="viewModel"
                type="com.lcworld.module_system.viewmodel.MemberViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <include
                android:id="@+id/layout_title"
                layout="@layout/system_layout_title"
                />

        <android.support.constraint.Guideline
                android:id="@+id/guideline1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="42dp"
                />
        <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="42dp"
                />

        <View
                android:id="@+id/bg_member"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="360:225"
                app:layout_constraintTop_toBottomOf="@id/layout_title"
                android:background="@color/bg_color_000B1E"/>
        <ImageView
                android:id="@+id/iv_member"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="277:133"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="@id/guideline1"
                app:layout_constraintRight_toRightOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/bg_member"
                android:layout_marginTop="@dimen/gap_size22"
                android:src="@{viewModel.imageType}"
                android:contentDescription="@string/image_description_default"/>
        <TextView
                android:id="@+id/tv_member_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_member"
                app:layout_constraintLeft_toLeftOf="@id/iv_member"
                android:layout_marginStart="@dimen/gap_size16"
                android:layout_marginTop="@dimen/gap_size14"
                style="@style/text_12_ffffff"
                android:text="@{viewModel.memberType}"
                />
        <TextView
                android:id="@+id/tv_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_member_type"
                app:layout_constraintLeft_toLeftOf="@id/iv_member"
                android:layout_marginStart="@dimen/gap_size15"
                android:layout_marginTop="@dimen/gap_size10"
                style="@style/text_12_ffffff"
                android:text="@{viewModel.fansNum}"
                />
        <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/iv_member"
                app:layout_constraintRight_toRightOf="@id/iv_member"
                app:layout_constraintTop_toTopOf="@id/iv_member"
                android:layout_marginTop="@dimen/dp_40"
                style="@style/text_18_ffffff_b"
                android:text="@{viewModel.name}"
                />
        <TextView
                android:id="@+id/tv_invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/iv_member"
                app:layout_constraintRight_toRightOf="@id/iv_member"
                app:layout_constraintBottom_toTopOf="@+id/pb"
                android:layout_marginBottom="@dimen/gap_size20"
                style="@style/text_13_ffffff"
                android:text="@{viewModel.invitationCodeStr}"
                />
        <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_invitation_code"
                app:layout_constraintTop_toTopOf="@id/tv_invitation_code"
                app:layout_constraintBottom_toBottomOf="@id/tv_invitation_code"
                android:layout_marginStart="@dimen/gap_size7"
                android:background="@drawable/shape_ffffff_1"
                style="@style/text_9_ffffff"
                android:padding="@dimen/gap_size3"
                android:text="@string/system_copy"
                app:onClickCommand="@{viewModel.copyOnClickCommand}"
                />

        <ProgressBar
                android:id="@+id/pb"
                android:layout_width="148dp"
                android:layout_height="4dp"
                style="?android:attr/progressBarStyleHorizontal"
                app:layout_constraintLeft_toLeftOf="@id/iv_member"
                app:layout_constraintRight_toRightOf="@id/iv_member"
                app:layout_constraintBottom_toBottomOf="@id/iv_member"
                android:layout_marginBottom="@dimen/gap_size15"
                android:max="@{viewModel.growthValueMax}"
                android:progress="@{viewModel.growthValueProgress}"
                />
        <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pb"
                app:layout_constraintBottom_toBottomOf="@id/pb"
                app:layout_constraintRight_toLeftOf="@id/pb"
                android:layout_marginEnd="@dimen/gap_size12"
                style="@style/text_13_ffffff"
                android:text="0"/>
        <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pb"
                app:layout_constraintBottom_toBottomOf="@id/pb"
                app:layout_constraintLeft_toRightOf="@id/pb"
                android:layout_marginStart="@dimen/gap_size12"
                style="@style/text_13_ffffff"
                android:text="@{viewModel.growthValueMaxStr}"
                />
        <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/text_13_ffffff"
                android:text="@{viewModel.statusStr}"
                app:layout_constraintTop_toTopOf="@id/btn_do_task"
                app:layout_constraintLeft_toLeftOf="@+id/bg_member"
                app:layout_constraintRight_toLeftOf="@+id/btn_do_task"
                android:layout_marginEnd="@dimen/gap_size8"
                android:layout_marginStart="@dimen/gap_size10"
                />

        <Button
                android:id="@+id/btn_do_task"
                android:layout_width="73dp"
                android:layout_height="@dimen/gap_size30"
                style="@style/text_13_333333"
                android:background="@drawable/shape_ffffff_15"
                android:text="@string/system_do_task"
                app:layout_constraintBottom_toBottomOf="@id/bg_member"
                app:layout_constraintRight_toRightOf="@id/bg_member"
                app:layout_constraintLeft_toRightOf="@id/tv_status"
                android:layout_marginEnd="@dimen/gap_size10"
                android:layout_marginBottom="@dimen/gap_size20"
                app:onClickCommand="@{viewModel.doTaskOnClickCommand}"/>

        <TextView
                android:id="@+id/tv_growth_value_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_333333"
                app:layout_constraintTop_toBottomOf="@id/bg_member"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/gap_size11"
                android:layout_marginTop="@dimen/gap_size18"
                android:text="@string/system_growth_value_introduction"/>

        <TextView
                android:id="@+id/tv_growth_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_13_333333"
                android:layout_marginStart="@dimen/gap_size10"
                android:layout_marginEnd="@dimen/gap_size10"
                app:layout_constraintTop_toBottomOf="@id/tv_growth_value_introduction"
                android:layout_marginTop="18dp"
                android:text="@{viewModel.growthValueTips}"/>

        <TextView
                android:id="@+id/tv_level_privilege_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_333333"
                app:layout_constraintTop_toBottomOf="@id/tv_growth_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/gap_size11"
                android:layout_marginTop="@dimen/gap_size20"
                android:text="@string/system_level_privilege_introduction"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_size1"
                android:background="@color/tx_colorb"
                app:layout_constraintTop_toTopOf="@+id/recycler_level"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_level_privilege_introduction"
                android:layout_marginTop="18dp"
                app:items="@{viewModel.observableList}"
                app:adapter="@{viewModel.adapter}"
                app:itemBinding="@{viewModel.itemBinding}"
                />

    </android.support.constraint.ConstraintLayout>
</layout>
