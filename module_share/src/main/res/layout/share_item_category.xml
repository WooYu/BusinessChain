<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:paddingTop="@dimen/gap_size23"
                                             android:paddingBottom="@dimen/gap_size20"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:src="@mipmap/share_item_wechat"
            android:id="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="40dp"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/gap_size16"
            android:textSize="@dimen/tx_size13"
            tools:text="weix "
            android:textColor="@color/tx_colorb"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>