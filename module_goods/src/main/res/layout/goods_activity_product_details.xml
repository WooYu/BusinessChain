<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bg_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--图片-->
            <ImageView
                android:id="@+id/view_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                app:layout_constraintDimensionRatio="360:330"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--价格和名称背景-->
            <View
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_banner" />

            <!--价格-->
            <TextView
                android:id="@+id/tv_price1"
                android:layout_width="wrap_content"
                android:drawableStart="@mipmap/goods_detail_diamond_a"
                android:drawablePadding="@dimen/gap_size4"
                android:textColor="@color/tx_colore"
                android:layout_marginStart="@dimen/gap_size10"
                android:textSize="23sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_size24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_banner"
                tools:text="300.00" />

            <TextView
                android:id="@+id/tv_price2"
                android:layout_width="wrap_content"
                android:drawableStart="@mipmap/goods_detail_diamond_b"
                android:drawablePadding="@dimen/gap_size4"
                android:textColor="@color/tx_colord"
                android:layout_marginStart="@dimen/gap_size10"
                android:textSize="@dimen/tx_size13"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_size24"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_price1"
                app:layout_constraintStart_toEndOf="@id/tv_price1"
                tools:text="300.00" />

            <View
                android:layout_width="0dp"
                android:background="@color/tx_colord"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_price2"
                app:layout_constraintEnd_toEndOf="@id/tv_price2"
                app:layout_constraintStart_toStartOf="@id/tv_price2"
                app:layout_constraintTop_toTopOf="@id/tv_price2" />

            <!--名称-->
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/gap_size18"
                android:layout_marginStart="@dimen/gap_size12"
                android:textSize="@dimen/tx_size15"
                android:textColor="@color/tx_colorb"
                android:paddingBottom="@dimen/gap_size21"
                android:layout_marginEnd="@dimen/gap_size15"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/gap_size8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price1"
                tools:text="商品名商品名称商品名称商品名称商品名称商品名称商品名称称" />

            <!--商品详情-->
            <WebView
                android:id="@+id/wv_detail"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/gap_size7"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:background="@drawable/shape_circle_a"
        android:src="@mipmap/arrow_left2"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_marginTop="@dimen/gap_size26"
        android:layout_marginStart="@dimen/gap_size7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:background="@drawable/shape_circle_a"
        android:src="@mipmap/title_share"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_size26"
        android:scaleType="center"
        android:layout_marginEnd="@dimen/gap_size4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--底部-->
    <View
        android:id="@+id/bg_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="360:43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clayout_bottom_a"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <TextView
            android:id="@+id/tv_operation_service_a"
            android:textSize="@dimen/tx_size10"
            android:drawablePadding="@dimen/gap_size5"
            android:textColor="@color/tx_colorg"
            android:layout_width="wrap_content"
            android:drawableTop="@mipmap/goods_detail_service"
            android:text="@string/goods_detail_service"
            android:layout_marginStart="@dimen/gap_size26"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_operation_shoppingcart"
            android:textSize="@dimen/tx_size10"
            android:drawablePadding="@dimen/gap_size5"
            android:textColor="@color/tx_colorg"
            android:layout_width="wrap_content"
            android:drawableTop="@mipmap/goods_detail_shoppingcart"
            android:text="@string/goods_detail_addshoppingcart"
            android:layout_marginStart="39dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_operation_service_a"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_operation_addShoppingCart"
            android:layout_width="0dp"
            android:text="@string/goods_detail_addshoppingcart"
            android:textColor="@color/tx_colorf"
            android:background="@drawable/shape_btnbg_d"
            android:textSize="@dimen/tx_size15"
            android:layout_marginTop="@dimen/gap_size7"
            android:layout_marginBottom="@dimen/gap_size7"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="100:30"
            app:layout_constraintEnd_toStartOf="@id/btn_operation_paynow"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/tv_operation_shoppingcart"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_operation_paynow"
            android:layout_width="0dp"
            android:text="@string/goods_detail_paynow"
            android:textColor="@color/tx_colorf"
            android:background="@drawable/shape_btnbg_b"
            android:textSize="@dimen/tx_size15"
            android:layout_marginTop="@dimen/gap_size7"
            android:layout_marginBottom="@dimen/gap_size7"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/gap_size3"
            android:layout_marginEnd="@dimen/gap_size10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="100:30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_operation_addShoppingCart"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clayout_bottom_b"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <TextView
            android:id="@+id/tv_operation_service_b"
            android:textSize="@dimen/tx_size10"
            android:drawablePadding="@dimen/gap_size5"
            android:textColor="@color/tx_colorg"
            android:layout_width="wrap_content"
            android:drawableTop="@mipmap/goods_detail_service"
            android:text="@string/goods_detail_service"
            android:layout_marginStart="@dimen/gap_size29"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_operation_confirmbuy"
            android:layout_width="0dp"
            android:text="@string/goods_detail_confirmpurchase"
            android:textColor="@color/tx_colorf"
            android:background="@drawable/shape_btnbg_b"
            android:layout_marginStart="@dimen/gap_size14"
            android:textSize="@dimen/tx_size15"
            android:layout_marginEnd="@dimen/gap_size9"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="293:30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_operation_service_b"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>