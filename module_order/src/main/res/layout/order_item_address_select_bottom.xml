<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:paddingTop="@dimen/gap_size15"
                                             android:paddingStart="@dimen/gap_size10"
                                             android:paddingEnd="@dimen/gap_size10"
                                             android:paddingBottom="@dimen/gap_size15"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            tools:text="cedfafafdfadfadfcecedfafafdfadfadfcedfafafdfadfadfadfsadfsdfafafdfadfadfadfsadfs"
            android:id="@+id/tv_content"
            android:textColor="@color/tx_colorb"
            android:textSize="@dimen/tx_size13"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/gap_size10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_flag"
            app:layout_constraintHorizontal_bias="0"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/order_address_choose"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>