<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:maxLines="1"
            android:textColor="@color/tx_colorb"
            android:textSize="@dimen/tx_size14"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:drawablePadding="@dimen/gap_size10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableEnd="@mipmap/arrow_right1"
            android:padding="@dimen/gap_size10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:background="@color/line_colorc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>