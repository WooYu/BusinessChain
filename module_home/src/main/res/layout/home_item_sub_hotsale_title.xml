<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:textColor="@color/tx_colorb"
        android:textSize="@dimen/tx_size17"
        android:paddingTop="@dimen/gap_size15"
        android:paddingBottom="@dimen/gap_size15"
        android:text="@string/home_hotsale"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:text="@string/home_viewmore"
        android:textSize="@dimen/tx_size13"
        android:textColor="@color/tx_colorb"
        android:layout_height="0dp"
        android:drawablePadding="@dimen/gap_size5"
        android:drawableEnd="@mipmap/arrow_right1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tv_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_left" />

</android.support.constraint.ConstraintLayout>