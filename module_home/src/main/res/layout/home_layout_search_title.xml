<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/home_activity_search_goods">

    <ImageView
        android:id="@+id/iv_back"
        android:src="@mipmap/home_title_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/gap_size13"
        android:paddingEnd="@dimen/gap_size20"
        app:layout_constraintBottom_toBottomOf="@id/bg_searchbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_searchbox" />

    <View
        android:id="@+id/bg_searchbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/gap_size10"
        android:background="@drawable/home_shape_searchbox_bg2"
        app:layout_constraintDimensionRatio="310:27"
        android:layout_marginEnd="@dimen/gap_size10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:textSize="@dimen/tx_size13"
        android:textColor="@color/tx_colorb"
        android:drawableStart="@mipmap/home_searchbox_search"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/txhint_colorb"
        android:background="@null"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/gap_size20"
        android:layout_marginStart="@dimen/gap_size20"
        android:hint="@string/home_hint_search"
        android:drawablePadding="@dimen/gap_size5"
        app:layout_constraintBottom_toBottomOf="@id/bg_searchbox"
        app:layout_constraintEnd_toEndOf="@id/bg_searchbox"
        app:layout_constraintStart_toStartOf="@id/bg_searchbox"
        app:layout_constraintTop_toTopOf="@id/bg_searchbox" />

</merge>